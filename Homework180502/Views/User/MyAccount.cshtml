@using Homework180502.Data
@using Homework180502.Models
@model MyAccountViewModel

<table class="table table-bordered table-striped table-hover blimie-table" style="margin-top: 60px">
    <tr>
        <th>Image</th>
        <th>View Count</th>
        <th>Delete</th>
    </tr>
    <tbody id="Table">
        @foreach (Image i in Model.Images)
            {
            <tr>
                <td><a href="/images/viewimage?id=@i.Id"><img src="/UploadedImages/@i.FileName" style="width: 120px; cursor:zoom-in" /></a></td>
                <td>@i.ViewsCount</td>
                <td> <button class="btn btn-primary delete" data-image-id="@i.Id">Delete</button> </td>
            </tr>
        }
    </tbody>
</table>

<div id="delete-modal" class="modal fade">
    <form method="post" action="/Images/DeleteImage">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Confirmation</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this image?</p>
                    <p>This action cannot be undone.</p>
                </div>
                <input type="hidden" name="imageid" id="delete-image-id-hidden" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary">Yes, delete it!</button>
                </div>
            </div>
        </div>
    </form>
</div>    
@section scripts
{
    <script src="/Scripts/myaccount.js"></script>
}   
@section stylesheets {
    <link rel="stylesheet" href="/content/myaccount.css" />
}
